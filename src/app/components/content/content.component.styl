jumbotron-padding-y = 3rem

.jumbotron
    padding-top jumbotron-padding-y
    padding-bottom jumbotron-padding-y
    margin-bottom 0
    background-color #fff

    p:last-child
      margin-bottom 0

    .container
        max-width 40rem

@media (min-width: 768px)
  .jumbotron
      padding-top jumbotron-padding-y * 2
      padding-bottom: jumbotron-padding-y * 2

.jumbotron-heading
    font-weight 300
